<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="profile"
            type="com.upclicks.ffc.ui.authentication.model.response.VerifySession.Profile" />
        <variable
            name="viewModel"
            type="com.upclicks.ffc.base.BaseViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <include layout="@layout/loading_layout" app:viewModel="@{viewModel}" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.main.fragments.ProfileFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:fitsSystemWindows="true"
                android:background="@drawable/app_bar_background"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="top"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    >
                    <TextView
                        android:id="@+id/titleTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"></TextView>

                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:background="@drawable/solid_rectangle_background_primary"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                >
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    app:riv_corner_radius="@dimen/_8sdp"
                    android:src="@drawable/user_placeholder"
                    imageBinding="@{profile.avatarPath}"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:text="@string/user_name"
                        notNullText="@{profile.fullName}"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:text="Info@gmail.com"
                        notNullText="@{profile.emailAddress}"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/text_color_grey"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:paddingVertical="@dimen/_10sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:background="@drawable/solid_rectangle_background_primary"
                    android:backgroundTint="@color/white"
                    android:padding="@dimen/_8sdp"
                    android:orientation="vertical"
                    android:elevation="@dimen/_5sdp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/personal_details"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawableStart="@drawable/ic_profile_user_icon"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="start|center"
                        android:id="@+id/personalDetailsTv"
                        android:paddingVertical="@dimen/_8sdp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/line_color_grey"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_orders"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawableStart="@drawable/ic_profile_order_icon"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="start|center"
                        android:id="@+id/myOrdersTv"
                        android:paddingVertical="@dimen/_8sdp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/line_color_grey"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_favorites"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawableStart="@drawable/ic_profile_favorite_icon"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="start|center"
                        android:id="@+id/myFavoritesTv"
                        android:paddingVertical="@dimen/_8sdp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/line_color_grey"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/notifications"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawableStart="@drawable/ic_profile_notifications_icon"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="start|center"
                        android:id="@+id/notificationTv"
                        android:paddingVertical="@dimen/_8sdp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/line_color_grey"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wallet"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawableStart="@drawable/ic_profile_wallet_icon"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="start|center"
                        android:id="@+id/walletTv"
                        android:paddingVertical="@dimen/_8sdp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/line_color_grey"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/shipping_address"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawableStart="@drawable/ic_profile_shipping_address_icon"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="start|center"
                        android:id="@+id/shippingAddressTv"
                        android:paddingVertical="@dimen/_8sdp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/line_color_grey"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawableStart="@drawable/ic_profile_settings_icon"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="start|center"
                        android:id="@+id/settingsTv"
                        android:paddingVertical="@dimen/_8sdp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/logoutLy"
                    android:backgroundTint="@color/secondary_light"
                    android:background="@drawable/solid_rectangle_background_primary"
                    android:layout_margin="@dimen/_16sdp"
                    android:padding="@dimen/_6sdp"
                    android:elevation="@dimen/_5sdp"
                    >
                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_logout"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/logout"
                        android:textColor="@color/secondary"
                        android:textSize="@dimen/_18sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>