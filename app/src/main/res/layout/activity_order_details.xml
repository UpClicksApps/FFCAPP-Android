<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="orderDetails"
            type="com.upclicks.ffc.ui.orders.OrderDetails" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.products.OrderDetailsActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/app_bar_background">

        <include layout="@layout/app_bar_layout"
            android:id="@+id/toolbar"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Accepted"
                notNullText="@{orderDetails.orderStatusText}"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/solid_rectangle_background_primary"
                    android:backgroundTint="@color/white"
                    android:elevation="@dimen/_5sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5sdp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total"
                        android:drawableStart="@drawable/ic_total_icon"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/subtotal"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            notNullText='@{orderDetails.subTotal+" "+@string/currency_code}'
                            tools:text="KD 8.850"
                            android:id="@+id/subTotalTv"
                            android:textColor="@color/text_color_grey" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/discount"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="KD 2.850"
                            notNullText='@{orderDetails.discountAmount+" "+@string/currency_code}'
                            android:id="@+id/discountTv"
                            android:textColor="@color/text_color_grey" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="KD 10.850"
                            notNullText='@{orderDetails.totalCost+" "+@string/currency_code}'
                            android:id="@+id/totalTv"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="@color/secondary" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/solid_rectangle_background_primary"
                    android:backgroundTint="@color/white"
                    android:elevation="@dimen/_5sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5sdp"     >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/promo_code"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_promo_code"
                        android:drawablePadding="@dimen/_5sdp"     />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Cash on Delivery"
                        notNullText="@{orderDetails.couponCode}"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:textColor="@color/text_color_grey"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/solid_rectangle_background_primary"
                    android:backgroundTint="@color/white"
                    android:elevation="@dimen/_5sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5sdp"     >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/payment_method"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_payment_method"
                        android:drawablePadding="@dimen/_5sdp"            />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Cash on Delivery"
                        notNullText="@{orderDetails.paymentWayText}"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:textColor="@color/text_color_grey"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/solid_rectangle_background_primary"
                    android:backgroundTint="@color/white"
                    android:elevation="@dimen/_5sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5sdp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notes"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:drawableStart="@drawable/ic_notes"
                        android:drawablePadding="@dimen/_5sdp"            />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Lorem Ipsum is simply dummy text of the printing
and typesetting industry."
                        notNullText="@{orderDetails.notes}"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/solid_rectangle_background_primary"
                    android:backgroundTint="@color/white"
                    android:elevation="@dimen/_5sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5sdp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_information"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:drawableStart="@drawable/ic_delivery_information"
                        android:drawablePadding="@dimen/_5sdp"        />
                    <com.skydoves.expandablelayout.ExpandableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:expandable_isExpanded="true"
                        android:id="@+id/deliveryInformationExpandable"
                        >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:text="@string/name"
                                android:textSize="@dimen/_11sdp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="User name"
                                notNullText="@{orderDetails.memberName}"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/text_color_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:text="@string/e_mail"
                                android:textSize="@dimen/_11sdp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Info@gmail.com"
                                notNullText="@{orderDetails.emailAddress}"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/text_color_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:text="@string/phone_number"
                                android:textSize="@dimen/_11sdp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="+9651544 444"
                                notNullText='@{""+orderDetails.phoneNumber}'
                                android:layout_marginStart="@dimen/_8sdp"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/text_color_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:text="@string/city"
                                android:textSize="@dimen/_11sdp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="City name"
                                notNullText="@{orderDetails.cityName}"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/text_color_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:text="@string/street"
                                android:textSize="@dimen/_11sdp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="dummy text"
                                notNullText="@{orderDetails.street}"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/text_color_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:text="@string/house_number"
                                android:textSize="@dimen/_11sdp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="B144"
                                notNullText="@{orderDetails.houseNumber}"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/text_color_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:text="@string/delivery_time"
                                android:textSize="@dimen/_11sdp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Oct 22/10/2021-2:30 PM"
                                bindServerDate="@{orderDetails.deliveryTime}"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/text_color_grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:text="@string/delivery_address"
                                android:textSize="@dimen/_11sdp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                notNullText="@{orderDetails.address}"
                                tools:text="Lorem Ipsum is simply dummy text of the printing
    and typesetting industry."
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/text_color_grey"/>
                        </LinearLayout>
                    </LinearLayout>
                    </com.skydoves.expandablelayout.ExpandableLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/solid_rectangle_background_primary"
                    android:backgroundTint="@color/white"
                    android:elevation="@dimen/_5sdp"
                    android:drawableStart="@drawable/ic_payment_method"
                    android:padding="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5sdp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/products"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:drawableStart="@drawable/ic_order_details_product"
                        android:drawablePadding="@dimen/_5sdp"               />
                    <com.skydoves.expandablelayout.ExpandableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/productsExpandable"
                        app:expandable_isExpanded="true"
                        >
                        <com.todkars.shimmer.ShimmerRecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:listitem="@layout/item_order_details_product"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:orientation="vertical"
                            tools:itemCount="10"
                            android:id="@+id/productsRv"
                            />

                    </com.skydoves.expandablelayout.ExpandableLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>