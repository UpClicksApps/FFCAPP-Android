<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="profile"
            type="com.upclicks.ffc.ui.authentication.model.response.VerifySession.Profile" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.authentication.MyAccountActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/app_bar_layout" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/update_profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_16sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userIv"
                        imageBinding="@{profile.avatarPath}"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center_horizontal" />

                    <ImageView
                        android:id="@+id/editProfileIv"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="end|bottom"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/ic_edit_profile" />
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_16sdp"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/stroke_rectangle_background_primary"
                            android:paddingHorizontal="@dimen/_16sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:text="@string/personal_info"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                                <com.upclicks.ffc.ui.general.component.customedittext.TextInput
                                    android:id="@+id/nameInput"
                                    notNullText="@{profile.name}"
                                    android:layout_width="match_parent"
                                    android:hint="@string/name"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:backgroundTint="@color/white"
                                    android:layout_weight="1"
                                    android:inputType="text" />

                                <com.upclicks.ffc.ui.general.component.customedittext.TextInput
                                    android:id="@+id/surnameInput"
                                    notNullText="@{profile.surname}"
                                    android:layout_width="match_parent"
                                    android:hint="@string/surname"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:backgroundTint="@color/white"
                                    android:layout_weight="1"
                                    android:inputType="text" />


                        </LinearLayout>


                        <com.upclicks.ffc.ui.general.component.customedittext.TextInput
                            android:id="@+id/addressInput"
                            notNullText="@{profile.address}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/address"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:backgroundTint="@color/white"
                            android:inputType="text" />

                        <com.upclicks.ffc.ui.general.component.customedittext.DateInput
                            android:id="@+id/dateInput"
                            android:layout_width="match_parent"
                            android:hint="@string/birthday"
                            bindBirthdate="@{profile.birthDate}"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@color/white"
                            android:paddingHorizontal="@dimen/_5sdp"
                            />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/editBtn"
                            style="@style/ButtonContainedPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:text="@string/edit"
                            app:icon="@drawable/ic_edit"
                            app:iconSize="@dimen/_14sdp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/changePasswordCv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:text="@string/change_password"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text_color_grey"
                        android:textSize="@dimen/_13sdp" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>